<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-table-statement" author="Nikita">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="statement"/>
            </not>
        </preConditions>
        <createTable tableName="statement">
            <column name="statement_id" type="uuid">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="client_id" type="uuid">
                <constraints foreignKeyName="statement-client_id-to-client_client_id" references="client(client_id)"/>
            </column>
            <column name="credit_id" type="uuid">
                <constraints foreignKeyName="statement-credit_id-to-credit_credit_id" references="credit(credit_id)"/>
            </column>
            <column name="status" type="varchar(255)"/>
            <column name="creation_date" type="timestamp without time zone"/>
            <column name="applied_offer" type="jsonb"/>
            <column name="sign_date" type="timestamp without time zone"/>
            <column name="ses_code" type="integer"/>
            <column name="status_history" type="jsonb"/>
        </createTable>
    </changeSet>

</databaseChangeLog>